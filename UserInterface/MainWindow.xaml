<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        MinWidth="640" MinHeight="480"
        Title="MainWindow">
    <Grid x:Name="Bg_Wrap">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="Tray" Grid.Row="0" MinHeight="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="ZoomIn" Grid.Column="0" Content="+" Width="30" Margin="71,0" Click="ZoomIn_Click"/>
            <Button x:Name="ZoomOut" Grid.Column="1" Content="-" Width="30" Margin="71,0" Click="ZoomOut_Click"/>
            <Button x:Name="Button3" Grid.Column="2" Content="Button" Width="75"/>
        </Grid>
        <Grid x:Name="GL_Content" Grid.Row="1" MinHeight="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Width="250" Height="auto"/>
            <sharpGL:OpenGLControl x:Name="OpenGLWindow" Grid.Column="1" OpenGLInitialized="OpenGLWindow_OpenGLInitialized" OpenGLDraw="OpenGLWindow_OpenGLDraw" MinHeight="300"/>
        </Grid>
    </Grid>
</Window>
